<section class="tab attributes" data-tab="attributes">
  <div class="grid grid-2col">
    {{#if (eq item.type "item")}}
      <div class="resource">
        <label class="resource-label">{{localize
            "WFJDR4E.ItemQuantity"
          }}</label>
        <input
          type="text"
          name="system.quantity"
          value="{{system.quantity}}"
          data-dtype="Number"
        />
      </div>
      <div class="resource">
        <label class="resource-label">{{localize "WFJDR4E.ItemWeight"}}</label>
        <input
          type="text"
          name="system.weight"
          value="{{system.weight}}"
          data-dtype="Number"
        />
      </div>
    {{/if}}

    {{#if system.formula}}
      <div class="resource">
        <label class="resource-label">{{localize "WFJDR4E.ItemFormula"}}</label>
        <input
          type="text"
          name="system.formula"
          value="{{system.formula}}"
          data-dtype="String"
        />
      </div>
    {{/if}}
  </div>
</section>