<form class="{{cssClass}}" autocomplete="off">
  <header class="sheet-header">
    <img
      class="profile-img"
      src="{{item.img}}"
      data-edit="img"
      title="{{item.name}}"
    />
    <div class="header-fields">
      <div class="header-fields">
        <h1 class="charname"><input
            name="name"
            type="text"
            value="{{item.name}}"
            placeholder="Name"
          /></h1>
      </div>
      <div>
        <div class="resource">
          <label
            class="resource-label"
            for="system.category"
          >{{@root.config.displaykeys.category}}</label>
          <select
            name="system.category"
            data-dtype="String"
            class="resource-content"
          >
            {{#select system.category}}
              {{#each @root.config.stuffFeatureCategory as |category key|}}
                <option value="{{key}}">{{localize
                    (lookup @root.config.stuffFeatureCategory key)
                  }}</option>
              {{/each}}
            {{/select}}
          </select>
        </div>
        <div class="resource">
          <label
            class="resource-label"
            for="system.division"
          >{{@root.config.displaykeys.division}}</label>
          <select
            name="system.division"
            data-dtype="String"
            class="resource-content"
          >
            {{#select system.division}}
              {{#each @root.config.stuffFeatureDivision as |division key|}}
                <option value="{{key}}">{{localize
                    (lookup @root.config.stuffFeatureDivision key)
                  }}</option>
              {{/each}}
            {{/select}}
          </select>
        </div>
        <div class="resource">
          <label
            class="resource-label"
            for="system.has_indice"
          >{{@root.config.displaykeys.has_indice}}</label>
          <input
            type="checkbox"
            name="system.has_indice"
            {{checked system.has_indice}}
            data-dtype="Boolean"
            class="resource-content"
          />
        </div>
      </div>
    </div>
  </header>

  {{! Sheet Body }}
  <section class="sheet-body">
    {{editor
      enrichedDescription
      target="system.description"
      engine="prosemirror"
      button=true
      editable=editable
    }}
  </section>
  <footer class="sheet-footer">
    <span>{{@root.config.footerLabel}}</span>
  </footer>

</form>